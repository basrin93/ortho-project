generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid()) // Уникальный номер
  email     String   @unique              // Почта (логин)
  password  String                        // Пароль
  createdAt DateTime @default(now())      // Дата регистрации
  
  patients  Patient[]
}

// 3. Модель Пациента
model Patient {
  id        String   @id @default(uuid())
  firstName String   // Имя
  lastName  String   // Фамилия
  phone     String?  // Телефон 
  birthDate DateTime // Дата рождения
  
  // Связь: Пациент привязан к конкретному врачу
  doctor    User     @relation(fields: [userId], references: [id])
  userId    String

  // Ссылки на другие данные пациента
  plans     TreatmentPlan[] // Планы лечения
  photos    Photo[]         // Фотографии
  visits    Visit[]         // Посещения
}

// 4. План лечения (например, аппарат Гербста)
model TreatmentPlan {
  id            String   @id @default(uuid())
  patient       Patient  @relation(fields: [patientId], references: [id])
  patientId     String

  diagnosis     String   // Диагноз
  apparatusType String   // Тип аппарата (например, "Herbst")
  startDate     DateTime @default(now())
  isActive      Boolean  @default(true) // Лечение идет сейчас?
}

// 5. Визиты
model Visit {
  id        String   @id @default(uuid())
  patient   Patient  @relation(fields: [patientId], references: [id])
  patientId String
  
  date      DateTime @default(now())
  notes     String   // Что делали (подкрутили винты и т.д.)
}

// 6. Фотографии
model Photo {
  id        String   @id @default(uuid())
  patient   Patient  @relation(fields: [patientId], references: [id])
  patientId String

  s3Key     String   // Ссылка на файл в облаке
  type      String   // Тип (анфас, профиль, зубы)
  createdAt DateTime @default(now())
}